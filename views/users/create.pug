extends ./../../layouts/common

block content
  h1 Create user
  if errors
    each error in errors
      .alert.alert-danger(role='alert')= error

  form(action="/users/create",method="POST",enctype="multipart/form-data",class="col-12")
    div.form-group
      label(for='name') Name
      input#name.form-control(type='text',name="name", placeholder='Name',value=values?values.name:'')
    div.form-group
      label(for='phone') Phone
      input#phone.form-control(type='text',name="phone", placeholder='Phone',value=values?values.phone:'')
    div.form-group
      label(for='avatar') Avatar
      input#avatar.form-control(type='file',name="avatar")
    
    button(type="submit", class="btn btn-primary px-4") Add


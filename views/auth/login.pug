extends ./../../layouts/common

block content
  h1 Login
  if errors
    each error in errors
      .alert.alert-danger(role='alert')= error
  form(action="/auth/login",method="POST",class="col-12")
    div.form-group
      label(for='email') Email
      input#email.form-control(type='text',name="email", placeholder='Email',value=values?values.email:'')
    div.form-group
      label(for='password') Password
      input#password.form-control(type='password',name="password", placeholder='Password',value=values?values.password:'')
    button(type="submit", class="btn btn-primary px-4") Login


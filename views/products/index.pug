extends ./../../layouts/common

block content
    .container
        .row
            each product in products 
                .card.col-4
                    img.card-img-top(src=product.image, alt='Card image cap')
                    .card-body
                        h5.card-title=product.name
                        p.card-text=product.description
                        a.btn.btn-primary(href='/cart/add/'+product.id) Add to Cart
    
    - var number = 0;
    div.d-flex.justify-content-center
        nav(aria-label='...')
            ul.pagination
                li.page-item(class=page==1 && 'disabled')
                    a.page-link(href='?page='+(+page-1), tabindex='-1') Previous
                while number < totalPage
                    li.page-item(class=(number+1)==page&&'active')
                        a.page-link(href='?page='+(number+1))=number++ + 1
                li.page-item(class=page==totalPage&&'disabled')
                    a.page-link(href='?page='+(+page+1)) Next